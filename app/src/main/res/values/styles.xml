<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Font-->
    <style name="font">
        <item name="fontFamily">@font/abeezee</item>
    </style>

    <!--    Title-->
    <style name="title_xxl" parent="font">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Edit Text-->
    <style name="input_text" parent="font">
        <item name="android:inputType">textPersonName</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">15dp</item>
    </style>

    <!--    Edit Text Big-->
    <style name="input_text_big" parent="font">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">5</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">top|start</item>
    </style>

    <!--    Subtitle TextView-->
    <style name="subtitle" parent="font">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    H2 Text-->
    <style name="h2_text" parent="font">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    H3 Text-->
    <style name="h3_text" parent="font">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    H4 Text-->
    <style name="h4_text" parent="font">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_variant_light</item>
    </style>

    <!--    H6 Text-->
    <style name="h6_text" parent="font">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    Button Primary-->
    <style name="button_primary" parent="font">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Button Primary Variant-->
    <style name="button_primary_variant" parent="font">
        <item name="android:background">@drawable/button_primary_variant_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Button Secondary-->
    <style name="button_secondary" parent="font">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_task" parent="font">
        <item name="android:backgroundTint">@color/background_2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_variant_dark</item>
    </style>


    <style name="checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_colors</item>
    </style>

<!--    Input Search-->
    <style name="input_search" parent="font">
        <item name="android:inputType">textPersonName</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/background_3</item>
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>